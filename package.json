{
  "name": "hybrid_automation",
  "version": "1.0.0",
  "description": "A hybrid automation framework for UI and API testing using Playwright, Axios, and Jest.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:api": "jest tests/API_Automation",
    "test:hybrid": "npx playwright test tests/HybridFlows",
    "test:ui": "npx playwright test tests/UI_Automation/tests"
  },
  "keywords": [
    "automation",
    "testing",
    "playwright",
    "jest",
    "axios",
    "typescript",
    "hybrid",
    "ui-testing",
    "api-testing"
  ],
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/axios": "^0.14.4",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "axios": "^1.11.0"
  }
}
